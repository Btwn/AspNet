@model IEnumerable<Agenda.Models.Contacto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agenda </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="alert alert-primary" role="alert">
           <h3> Agenda</3>
        </div>

        <div class="card">
            <h5 class="card-header">Contactos</h5>
            <div class="card-body">
                <div class="row">  <button type="button" class="btn btn-outline-success"><a href="/Home/Alta">Agregar</a></button></div>
              
                <table class="table table table-hover">
                    <thead>
                        <tr>
                            <td scope="col">ID</td>
                            <td scope="col">Nombre</td>
                            <td scope="col">AP. Paterno</td>
                            <td scope="col">AP. Materno</td>
                            <td scope="col">Sexo</td>
                            <td scope="col">Direcciòn</td>
                            <td scope="col">Referencia</td>
                            <td scope="col">Telefono</td>
                            <td scope="col">Borrar</td>
                            <td scope="col">Modificar</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cont in Model)
                        {
                            <tr>
                                <td>@cont.Idcontacto</td>
                                <td>@cont.NombreContacto</td>
                                <td>@cont.ApellidoPaterno</td>
                                <td>@cont.ApellidoMaterno</td>
                                <td>@cont.sexo</td>
                                <td>@cont.direccion</td>
                                <td>@cont.Referencia</td>
                                <td>@cont.telefono</td>
                                <td><button type="button" class="btn btn-outline-danger"><a href="/Home/Baja?Idcontacto=@cont.Idcontacto">Borrar</a></button></td>
                                <td><button type="button" class="btn btn-outline-primary"><a href="/Home/Modificacion?Idcontacto=@cont.Idcontacto">Modificar</a></button></td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
       
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
